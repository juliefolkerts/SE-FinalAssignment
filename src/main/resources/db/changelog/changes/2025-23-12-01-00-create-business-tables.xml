<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">

    <changeSet id="2025-23-12-01-00-create-business-tables" author="jvm">
        <createTable tableName="t_categories">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1024)"/>
        </createTable>
        <addUniqueConstraint tableName="t_categories" columnNames="name" constraintName="uq_categories_name"/>

        <createTable tableName="t_products">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2048)"/>
            <column name="price" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="seller_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="t_products"
                                 baseColumnNames="category_id"
                                 referencedTableName="t_categories"
                                 referencedColumnNames="id"
                                 constraintName="fk_products_category"
                                 onDelete="RESTRICT"/>
        <addForeignKeyConstraint baseTableName="t_products"
                                 baseColumnNames="seller_id"
                                 referencedTableName="t_users"
                                 referencedColumnNames="id"
                                 constraintName="fk_products_seller"
                                 onDelete="RESTRICT"/>

        <createTable tableName="t_orders">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="total_price" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="t_orders"
                                 baseColumnNames="user_id"
                                 referencedTableName="t_users"
                                 referencedColumnNames="id"
                                 constraintName="fk_orders_user"
                                 onDelete="RESTRICT"/>

        <createTable tableName="t_order_items">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="price_at_purchase" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="t_order_items"
                                 baseColumnNames="order_id"
                                 referencedTableName="t_orders"
                                 referencedColumnNames="id"
                                 constraintName="fk_order_items_order"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="t_order_items"
                                 baseColumnNames="product_id"
                                 referencedTableName="t_products"
                                 referencedColumnNames="id"
                                 constraintName="fk_order_items_product"
                                 onDelete="RESTRICT"/>

        <createTable tableName="t_reviews">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="VARCHAR(2048)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="t_reviews"
                                 baseColumnNames="user_id"
                                 referencedTableName="t_users"
                                 referencedColumnNames="id"
                                 constraintName="fk_reviews_user"
                                 onDelete="RESTRICT"/>
        <addForeignKeyConstraint baseTableName="t_reviews"
                                 baseColumnNames="product_id"
                                 referencedTableName="t_products"
                                 referencedColumnNames="id"
                                 constraintName="fk_reviews_product"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>