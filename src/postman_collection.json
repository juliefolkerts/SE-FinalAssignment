            "url": {
              "raw": "{{base_url}}/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["products", "{{product_id}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Phone\",\n  \"description\": \"New description\",\n  \"price\": 899.99,\n  \"categoryId\": {{category_id}},\n  \"sellerId\": {{seller_id}},\n  \"status\": \"AVAILABLE\"\n}"
            }
